{
  "name": "brusch/unzer-php-sdk",
  "description": "This is a fork of unzerdev/php-sdk that supports PHP8 until the official SDK provides support.",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "require": {
    "php": "~7.1.0|~7.2.0|~7.3.0|~7.4.0|~8.0.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">6.5 <8.0",
    "friendsofphp/php-cs-fixer": "^2.0"
  },
  "suggest": {
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "UnzerSDK\\": "src",
      "UnzerSDK\\examples\\": "examples"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UnzerSDK\\test\\": "test"
    }
  },
  "support": {
    "email": "support@unzer.com"
  }
}
